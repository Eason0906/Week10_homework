{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/Eason0906/Week10_homework/main/data/EF_GDP(constant2010USD).csv"
  },
  "params": [
    {
      "name": "GPA_above",
      "value": -74330000000,
      "bind": {
        "input": "range",
        "min": -74330000000,
        "max": 1000000000000,
        "step": 100000000,
        "name": "Minimum GPA Increase: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.GDP2013 > 0"},
    {"filter": "datum.GDP2009 > 0"},
    {"filter": "datum.GDPDelta > GPA_above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "GDP2009",
      "type": "quantitative",
      "title": "Confirmed Cases",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [100000000, 100000000000000]}
    },
    "y": {
      "field": "GDP2013",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [100000000, 100000000000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "GDPDelta",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              100000000,
              100000000,
              100000000000,
              1000000000000,
              10000000000000
            ],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [{"field": "Country", "type": "nominal"}]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Yemen' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'United States of America' ||  datum['Country'] == 'Greece' || datum['Country'] == 'Fiji' ",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [{"field": "Country", "type": "nominal"}]
      }
    }
  ],
  "config": {}
}